[flake8]
# Configuration for flake8 linting

# Maximum line length
max-line-length = 100

# Exclude directories from linting
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    ENV,
    build,
    dist,
    *.egg-info,
    .tox,
    Tests,
    data

# Ignore specific rules
# E203: whitespace before ':' (conflicts with black)
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (conflicts with black)
# E731: do not assign a lambda expression (sometimes useful)
ignore = E203, W503

# Show source code for errors
show-source = True

# Count errors
count = True

# Statistics
statistics = True

# Maximum complexity
max-complexity = 15
